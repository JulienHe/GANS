{
  "hosting": {
    "public": "dist/public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "app-next"
      }
    ],
    "predeploy": "yarn build-public"
  },
  "functions": {
    "source": "dist/functions",
    "predeploy":
      "yarn build-funcs && yarn build-app && yarn copy-deps && yarn install-deps"
  }
}
